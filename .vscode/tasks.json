{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "debug build",
      "command": "/usr/bin/g++",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}/build/${fileBasenameNoExtension}"
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    }
  ]
}